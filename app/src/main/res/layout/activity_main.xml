<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etId"
        android:hint="Id"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_500"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toLeftOf="@id/etTitulo"
        ></EditText>

    <EditText
        android:id="@+id/etTitulo"
        android:hint="Titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_500"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/etId"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        ></EditText>

    <EditText
        android:id="@+id/etAnio"
        android:hint="Anio"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/etTitulo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"

        ></EditText>

    <EditText
        android:id="@+id/etimdbID"
        android:hint="imdbID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/etTitulo"
        app:layout_constraintLeft_toRightOf="@id/etAnio"
        ></EditText>

    <EditText
        android:id="@+id/etTipo"
        android:hint="Tipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_500"
        app:layout_constraintLeft_toRightOf="@id/etimdbID"
        app:layout_constraintTop_toBottomOf="@id/etTitulo"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"

        ></EditText>

    <EditText
        android:id="@+id/etPoster"
        android:hint="Poster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/etTipo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        ></EditText>

    <EditText
        android:id="@+id/etPais"
        android:hint="PaÃ­s de Origen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/etGenero"
        app:layout_constraintTop_toBottomOf="@id/etPoster"
        android:layout_marginLeft="20dp"
        ></EditText>

    <EditText
        android:id="@+id/etGenero"
        android:hint="Genero"
        android:textSize="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_500"
app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPoster"
        app:layout_constraintLeft_toRightOf="@id/etPais"
        android:layout_marginRight="20dp"
        ></EditText>

    <Button
        android:id="@+id/btn_Guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:background="@color/purple_500"

app:layout_constraintTop_toBottomOf="@id/etGenero"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        ></Button>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar pelicula por ID"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="300dp"
        app:layout_constraintTop_toBottomOf="@id/btn_Guardar"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"

        />
    <EditText
        android:id="@+id/etBusqueda"
        android:hint="ID"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_500"
       app:layout_constraintTop_toBottomOf="@id/btn_Guardar"
        app:layout_constraintLeft_toRightOf="@id/textView"
        android:layout_marginTop="40dp"
        app:layout_constraintRight_toLeftOf="@id/btnBusqueda"

        ></EditText>

    <Button
        android:id="@+id/btnBusqueda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="284dp"
        app:layout_constraintTop_toBottomOf="@id/btn_Guardar"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toRightOf="@id/etBusqueda"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/idMuestra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="355dp"
        app:layout_constraintTop_toBottomOf="@id/btnBusqueda"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tituloMuestra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="395dp"
        app:layout_constraintTop_toBottomOf="@id/idMuestra"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/anioMuestra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anio"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="395dp"
        app:layout_constraintTop_toBottomOf="@id/tituloMuestra"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/imdbIDMuestra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="imdbID"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="395dp"
        app:layout_constraintTop_toBottomOf="@id/anioMuestra"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tipoMuestra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="395dp"
        app:layout_constraintTop_toBottomOf="@id/imdbIDMuestra"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/posterMuestra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poster"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="395dp"
        app:layout_constraintTop_toBottomOf="@id/tipoMuestra"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/paisMuestra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pais"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="395dp"
        app:layout_constraintTop_toBottomOf="@id/posterMuestra"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/generoMuestra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genero"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="395dp"
        app:layout_constraintTop_toBottomOf="@id/paisMuestra"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>